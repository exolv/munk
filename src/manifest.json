{
  "version": "1.0",
  "name": "munk",
  "description": "Extinde LinkedIn cu informa»õii de pe Undelucram.",
  "author": "xsuve",
  "manifest_version": 3,
  "permissions": [],
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*"
      ],
      "js": [
        "content_scripts.js"
      ],
      "css": []
    }
  ],
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png"
    },
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "https://*/*"
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "https://www.linkedin.com/*"
      ],
      "resources": [
        "assets/img/*"
      ]
    }
  ]
}